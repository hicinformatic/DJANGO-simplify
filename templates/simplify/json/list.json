{% load simplify %}{
{% for object in object_list %}    "{{ object.pk }}":
    {{% for field in fields_detail %} {% if field in fields_relation %}{% getrelation object field as sub %}
        "{{ field }}" :
        {
        {% for s in sub.relations %}    "{{ s }}": 
            {{% for sfield in sub.fields %}
                "{{ sfield }}": "{% getattribute s sfield %}"{% if not forloop.last %},{% endif %}{% endfor %}
            }{% if not forloop.last %},{% endif %}{% endfor %}
        }{% else %}
        "{{ field }}": "{% getattribute object field %}"{% endif %}{% if not forloop.last %},{% endif %}{% endfor %}
    }{% if not forloop.last %},{% endif %}
{% endfor %}}